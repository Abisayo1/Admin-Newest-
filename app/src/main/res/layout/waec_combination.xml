<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your WAEC Subjects and Grades"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compulsory Subjects:"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <!-- English -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <CheckBox
                android:id="@+id/subject_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English Language"
                android:checked="true"
                android:clickable="false" />

            <Spinner
                android:id="@+id/grade_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/grades_array"
                android:layout_marginStart="16dp"
                android:visibility="visible" />
        </LinearLayout>

        <!-- Mathematics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <CheckBox
                android:id="@+id/subject_math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:checked="true"
                android:clickable="false" />

            <Spinner
                android:id="@+id/grade_math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/grades_array"
                android:layout_marginStart="16dp"
                android:visibility="visible" />
        </LinearLayout>

        <!-- Elective Subjects -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Up to 7 More Subjects and Their Grades"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <!-- Dynamic Subjects -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Physics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_physics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Physics" />
                <Spinner
                    android:id="@+id/grade_physics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Biology -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_biology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biology" />
                <Spinner
                    android:id="@+id/grade_biology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Further Mathematics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_further_mathematics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Further Mathematics" />
                <Spinner
                    android:id="@+id/grade_further_mathematics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Economics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_economics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Economics" />
                <Spinner
                    android:id="@+id/grade_economics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Literature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_literature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Literature" />
                <Spinner
                    android:id="@+id/grade_literature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Government -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_government"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Government" />
                <Spinner
                    android:id="@+id/grade_government"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Chemistry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_chemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chemistry" />
                <Spinner
                    android:id="@+id/grade_chemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Accounting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_accounting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accounting" />
                <Spinner
                    android:id="@+id/grade_accounting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Commerce -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_commerce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commerce" />
                <Spinner
                    android:id="@+id/grade_commerce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Agricultural Science -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_agricultural_science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agricultural Science" />
                <Spinner
                    android:id="@+id/grade_agricultural_science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Food and Nutrition -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_food_nutrition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food and Nutrition" />
                <Spinner
                    android:id="@+id/grade_food_nutrition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Home Economics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_home_economics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Economics" />
                <Spinner
                    android:id="@+id/grade_home_economics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>


            <!-- Arabic -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_arabic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arabic" />
                <Spinner
                    android:id="@+id/grade_arabic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Biblical Studies -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_biblical_studies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biblical Studies" />
                <Spinner
                    android:id="@+id/grade_biblical_studies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Christian Religious Studies (CRS) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_crs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Christian Religious Studies (CRS)" />
                <Spinner
                    android:id="@+id/grade_crs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- French -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_french"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="French" />
                <Spinner
                    android:id="@+id/grade_french"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Geography -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/subject_geography"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geography" />
                <Spinner
                    android:id="@+id/grade_geography"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/waec_grades"
                    android:layout_marginStart="16dp"
                     />
            </LinearLayout>

            <!-- Add the rest of the subjects similarly (Government, Hausa, History, etc.) -->

        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
