<!-- res/layout/fragment_applicant_info.xml -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Feel Free to Edit your Information in the Admission Procees Section"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/display_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/display_user_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth: "
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/display_user_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/display_jamb_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAMB Registration Number: "
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/display_waec_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WAEC Registration Number: "
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/display_jamb_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAMB Score: "
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/display_jamb_combination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAMB Subjects: "
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/display_waec_combination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WAEC Subjects and Grades: "
            android:textSize="16sp"
            android:padding="8dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
