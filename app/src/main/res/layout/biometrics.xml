<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your full name"
            android:inputType="textPersonName" />

        <!-- Date of Birth -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD"
            android:inputType="date" />

        <!-- Gender -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/gender_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />
        </RadioGroup>

        <!-- UTME Score -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTME Score"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/utme_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your UTME score"
            android:inputType="number" />

        <!-- JAMB Registration Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAMB Registration Number"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/jamb_reg_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your JAMB registration number"
            android:inputType="text" />

        <!-- WAEC Registration Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAEC Registration Number"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/waec_reg_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your WAEC registration number"
            android:inputType="text" />

        <!-- WAEC Scratch Card Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAEC Scratch Card Number"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/waec_scratch_card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your WAEC scratch card number"
            android:inputType="text" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />
    </LinearLayout>
</ScrollView>
